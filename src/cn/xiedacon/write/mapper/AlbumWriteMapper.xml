<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.xiedacon.write.dao.AlbumWriteDao">

	<sql id="id_WHERE">
		<where>a.id = #{id}</where>
	</sql>

	<update id="updatePlayNumById">
		UPDATE album_record a
		SET a.playNum = #{playNum}
		<include refid="id_WHERE"></include>
	</update>
	
	<update id="updateCommentNumById">
		UPDATE album_record a
		SET a.commentNum = #{commentNum}
		<include refid="id_WHERE"></include>
	</update>
</mapper>